
<div <%if(page.algolia != true){%>class="container"<% } %>>
	<div <%if(page.algolia != true){%>class="page"<% } else { %>class="blazing"<% } %> >
		<h1><%=page.title%></h1>
			
		<%if(page.description){%>
			<h2 class="light text-muted"><%-page.description%></h2>
		<%}%>			
		
		
		<%if(page.algolia == true){%>
		
			<div class="bottom-20">
				<div class="sharethis-inline-share-buttons"></div>
			</div>
			
			<div class="pure-g gutters">
				<div class="pure-u-1 pure-u-md-1-2">
					<script type="text/html" id="breakdown-template">
						<%-partial("modules/events/table", {}, {cache: true})%>
					</script>
					<%-partial("modules/events/booking")%>
					<div class="sharethis-inline-share-buttons"></div>
				</div>
				<div class="pure-u-1 pure-u-md-1-2">
					<%-partial("partials/slides", {slides: page.gallery, slide_id: "package_slide"})%>
					<div class="bottom-20">
						<%-page._content%>
					</div>
				</div>
			</div>
		<% } else {%>
			<div class="bottom-20">
				<%-partial("partials/slides", {slides: page.gallery, slide_id: "package_slide"})%>
			</div>
			<%-page._content%>
		<% }%>
	
	</div>
</div>
