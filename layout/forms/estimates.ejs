<aside id="estimates" class="modal hidden">
	<div class="modal-wrap">
		<form id="email_subscribe" class="modal-body pure-form">
			<div class="modal-title large clearfix strong uppercase"><%= theme.estimates.title%> <span class="modal-close" onclick="show_modal('estimates')">&times;</span></div>
			<div class="modal-content light">
			
				<div class="bottom-10">
					<div class="pure-g gutters">
						<div class="pure-u-1 pure-u-md-1-2">
							<label>Nombre completo</label>
							<input type="text" name="name" class="width-100"/>					
						</div>
						<div class="pure-u-1 pure-u-md-1-2">
							<label>Email</label>
							<input type="email" name="email" class="width-100"/>
						</div>
					</div>
				</div>
				<div class="bottom-10">	
					<div class="pure-g gutters">
						<div class="pure-u-1 pure-u-md-1-2">
							<label>Tel√©fono</label>
							<input type="text" name="tel" class="width-100"/>					
						</div>
						<div class="pure-u-1 pure-u-md-1-2">
							<label>Participantes</label>
							<input type="number" name="participants" class="width-100"/>	
						</div>
					</div>	
				</div>
			</div>
			<div class="modal-footer light">
				<button type="submit" class="pure-button pure-button-black"><%= theme.estimates.button%></button>
			</div>
		</form>
	</div>
</aside>